<resources>

    <style name="Base.Theme.AiGeneration" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AiGeneration" parent="Base.Theme.AiGeneration" />

    <style name="select_profile_image_corner" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="app_style">
        <item name="android:background">@color/light_black</item>
    </style>

    <style name="start_screen_text">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="sign_in_edit_text">
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="tab_layout">
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CustomNavMenuItemStyle" parent="@style/app_style">
        <item name="android:textSize">15sp</item>
        <item name="drawerLayoutCornerSize">0dp</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemVerticalPadding">20dp</item>
        <item name="itemHorizontalPadding">13dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="fab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>