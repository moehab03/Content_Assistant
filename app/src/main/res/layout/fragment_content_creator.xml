<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/app_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/content_creator"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ideaGenerationCardView"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/idea_generation" />

        <View
            android:id="@+id/imageGenerationCardView"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/image_generation" />


    </LinearLayout>
</layout>